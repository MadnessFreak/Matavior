<header class="headline">
	<h3>Search</h3>
	<hr>
</header>


<div class="row">
	<div class="col-lg-12">
		<form class="form-horizontal well" role="form" method="post">
			<div class="form-group">
				<label for="search" class="col-sm-2 control-label">Search for term</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="search" placeholder="Search term">
					<p class="help-block">Type in one or more search terms, each must be at least 4 characters.</p>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-default">Search</button>
				</div>
			</div>
		</form>
	</div> <!-- col -->
</div> <!-- row -->