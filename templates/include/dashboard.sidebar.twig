<div class="media well">
	<a class="media-left framed" href="/members/profile/{{ user.username }}"><img src="/images/avatar/default-big.png" alt="User Avatar" style="width:80px; height:80px;"></a>
	<div class="media-body">
		<h5 class="media-heading">
			<a href="/members/profile/{{ user.username }}">{{ user.username }}</a><br>
			<small>Administrator</small>

		</h5>

		<small>Regstiert seit {{ user.registrationDate|date('mata.date.shortDateFormat'|lang) }}</small>
	</div>
