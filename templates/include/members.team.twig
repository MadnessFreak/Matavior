{% include 'pageHeader.twig' with { 'pageTitle' : 'Team <span class="badge">' ~ membersCount ~ '</span>' } %}

{% for group in teamGroups if subsearch('primaryGroup', group.groupID, members) %}
<div>
	<header class="head"><h4 class="left">{{ group.groupName }}</h4></header>
	<div class="members">
		{% for member in members if member.primaryGroup == group.groupID %}
			{% include 'include/members.listentry.twig' %}
		{% endfor %}
	</div>
</div>
{% endfor %}

<style type="text/css">
.members { margin: 0 0 10px 0; }
.members > div { 
	width: 100%;
	border-top: 1px solid #ddd;
	border-left: 1px solid #ddd;
	border-right: 1px solid #ddd;
	padding: 10px;
	overflow: hidden;
}
.members > div:hover { background-color: #f5f5f5; }
.members > div:first-child { border-radius: 4px 4px 0 0; }
.members > div:last-child { border-radius: 0 0 4px 4px; border-bottom: 1px solid #ddd; }
.members > div > div { float: left; padding: 5px; display: block; }
</style>